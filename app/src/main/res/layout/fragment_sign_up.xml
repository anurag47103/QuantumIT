<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/createAccounttextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="37dp"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/app_red"
                android:text="Create an \n Account" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/app_black"
                android:layout_marginStart="40dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/roboto"
                android:textSize="17sp"
                android:text="Name" />

            <EditText
                android:id="@+id/editTextTextName"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="2dp"
                android:textSize="18sp"
                android:hint="John Doe"
                android:fontFamily="@font/roboto"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:drawableEnd="@drawable/ic_baseline_person_24"/>

            <TextView
                android:id="@+id/emailTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/app_black"
                android:layout_marginStart="40dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/roboto"
                android:textSize="17sp"
                android:text="Email" />

            <EditText
                android:id="@+id/editTextTextEmailAddress2"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="2dp"
                android:textSize="18sp"
                android:hint="johndoe@gmail.com"
                android:fontFamily="@font/roboto"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:drawableEnd="@drawable/ic_baseline_email_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/app_black"
                android:layout_marginStart="40dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/roboto"
                android:textSize="17sp"
                android:text="Contact no" />



            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="2dp"
                android:textSize="18sp"
                android:hint="9876543210"
                android:fontFamily="@font/roboto"
                android:drawableEnd="@drawable/ic_baseline_phone_24"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/passwordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/app_black"
                android:layout_marginStart="40dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/roboto"
                android:textSize="17sp"
                android:text="Password" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="2dp"
                android:hint="Password"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:ems="10"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/ic_baseline_lock_24"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="     I agree with " />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_red"
                    android:textSize="15sp"
                    android:text="@string/term_condition"

                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an Account ? "
                    />

                <TextView
                    android:id="@+id/registerNowTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_red"
                    android:textSize="15sp"
                    android:text="Sign In!"
                    android:textStyle="bold"
                    />
            </LinearLayout>



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>